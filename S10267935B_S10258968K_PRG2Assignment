// Week 01 Practical Qn 1

//declare variables
double weight;
double height;
string healthCategory;

//prompt user for weight and height
Console.Write("Enter weight in kg: ");
weight = Convert.ToDouble(Console.ReadLine());
Console.Write("Enter height in m: ");
height = Convert.ToDouble(Console.ReadLine());

//calculate bmi. declare the variable
double BMI = weight / (height * height);
Console.WriteLine(BMI);

//use control structure found in slide 28
if (BMI < 18.5)
{
    healthCategory = "Underweight";
}
else if (BMI < 23)
{
    healthCategory = "Normal weight";
}
else if (BMI < 27.5)
{
    healthCategory = "Over weight";
}
else
{
    healthCategory = "Obese";
}

// display and health category
Console.WriteLine("Your BMI is {0}", BMI);
Console.WriteLine("You are {0}", healthCategory);
